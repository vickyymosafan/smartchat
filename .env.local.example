# SMARTCHAT - Development Environment Variables
# Copy file ini ke .env.local untuk local development

# ======================
# DEVELOPMENT VARIABLES
# ======================

# Environment mode
NODE_ENV=development

# Development URL (untuk local testing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# n8n Webhook URL
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://vickymosafan2.app.n8n.cloud/webhook/d49a228d-703d-4a93-8e7a-ed173500fc6e/chat

# ======================
# UI CONFIGURATION
# ======================

# Enable new UI redesign
# Set ke 'true' untuk menggunakan UI baru (ChatShell) - RECOMMENDED
# Set ke 'false' untuk menggunakan UI lama (ChatInterface)
NEXT_PUBLIC_ENABLE_NEW_UI=true

# ======================
# PWA CONFIGURATION
# ======================

# Enable PWA features (can be false in development)
NEXT_PUBLIC_ENABLE_PWA=true

# ======================
# DEVELOPMENT TOOLS
# ======================

# Bundle analyzer (set ke 'true' untuk analyze bundle size)
ANALYZE=false

# Enable debug mode (useful for development)
NEXT_PUBLIC_DEBUG=true

# API timeout (dalam milidetik, default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# ======================
# PRODUCTION VARIABLES (for reference)
# ======================

# For production deployment, use these values:
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
# NEXT_PUBLIC_ENABLE_NEW_UI=true
# NEXT_PUBLIC_DEBUG=false
# ANALYZE=false